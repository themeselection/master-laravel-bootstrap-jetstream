{
  "name": "energyweapons/laravel-bootstrap-jetstream",
  "description": "A Laravel 10 package to easily switch TailwindCSS resources generated by Laravel Jetstream to Bootstrap 5.",
  "keywords": [
    "laravel",
    "bootstrap",
    "jetstream"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Pixinvent",
      "email": "hello@pixinvent.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "laravel/jetstream": "^3.1",
    "orchestra/testbench": "^8.3.0",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Pixinvent\\Jetstrap\\": "src/Pixinvent/Jetstrap/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pixinvent\\Jetstrap\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Pixinvent\\Jetstrap\\JetstrapServiceProvider"
      ],
      "aliases": {
        "Jetstrap": "Pixinvent\\Jetstrap\\JetstrapFacade"
      }
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "tests": "vendor/bin/phpunit",
    "testsVerbose": "@tests -vvv"
  }
}
